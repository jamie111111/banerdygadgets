<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="klantStackPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banerdygadgets.controllers.klanten.KlantenViewController">
    <children>
        <VBox stylesheets="@../../styles.css">
            <children>
                <fx:include fx:id="navigation" source="../navigation/Navigation.fxml" />
                <TableView fx:id="tableViewKlant" stylesheets="@../../styles.css" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colKlantNr" prefWidth="75.0" styleClass="center_column" text="Klantnr" />
                        <TableColumn fx:id="colVolledigeNaam" prefWidth="96.0" styleClass="center_column" text="Volledige naam" />
                        <TableColumn fx:id="colAdres" prefWidth="125.0" styleClass="center_column" text="Adres" />
                  <TableColumn fx:id="colHuisNr" prefWidth="75.0" styleClass="center_column" text="Huisnr" />
                        <TableColumn fx:id="colPostcode" minWidth="-1.0" prefWidth="180.0" styleClass="center_column" text="Postcode" />
                        <TableColumn fx:id="colWoonplaats" prefWidth="115.0" resizable="false" styleClass="center_column" text="Woonplaats" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onUpdateKlant" styleClass="btn" stylesheets="@../../styles.css" text="Update" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddKlant" prefHeight="30.0" prefWidth="120.0" styleClass="btn" stylesheets="@../../styles.css" text="Toevoegen" textFill="WHITE">
                            <HBox.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0" />
                            </HBox.margin></Button>
                        <Button mnemonicParsing="false" onAction="#onDeleteKlant" styleClass="btn" stylesheets="@../../styles.css" text="Verwijder" textFill="WHITE" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
