<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="retourStackPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banerdygadgets.controllers.retouren.RetourenWindowController">
   <children>
        <VBox styleClass="center_column" stylesheets="@../../styles.css">
         <children>
              <fx:include fx:id="navigation" source="../navigation/Navigation.fxml" />
            <TableView fx:id="tableviewRetouren" prefWidth="861.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colRetourNr" prefWidth="75.0" styleClass="center_column" text="Retournr" />
                  <TableColumn fx:id="colBestelNr" prefWidth="75.0" styleClass="center_column" text="Bestelnr" />
                  <TableColumn fx:id="colDatum" prefWidth="75.0" styleClass="center_column" text="Datum aanmelding" />
                  <TableColumn fx:id="colStatus" prefWidth="75.0" styleClass="center_column" text="Status" />
                  <TableColumn fx:id="colReden" prefWidth="75.0" styleClass="center_column" text="Reden" />
                  <TableColumn fx:id="colKlantNr" prefWidth="75.0" styleClass="center_column" text="Klantnr" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" onAction="#updateRetourOrder" styleClass="btn" stylesheets="@../../styles.css" text="Update status" textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="retourDialog" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddRetourOrder" prefHeight="30.0" prefWidth="120.0" styleClass="btn" stylesheets="@../../styles.css" text="Toevoegen" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin></Button>
                  <Button id="Verwijder" fx:id="deleteBtnRetourOrder" mnemonicParsing="false" onAction="#onDeleteRetourOrder" styleClass="btn" stylesheets="@../../styles.css" text="Verwijder" textFill="WHITE" />
                  <Button id="Verwijder" fx:id="deleteBtnRetourOrder1" layoutX="506.0" layoutY="15.0" mnemonicParsing="false" onAction="#onRefresh" styleClass="btn" stylesheets="@../../styles.css" text="Refresh" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
