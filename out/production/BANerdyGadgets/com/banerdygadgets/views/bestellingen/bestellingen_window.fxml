<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="bestellingStackpane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banerdygadgets.controllers.bestellingen.BestellingenController">
   <children>
      <VBox styleClass="center_column" stylesheets="@../../styles.css">
         <children>
          <fx:include fx:id="navigation" source="../navigation/Navigation.fxml" />
            <TableView fx:id="tableViewBestelling" prefWidth="861.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colBestelNr" prefWidth="75.0" styleClass="center_column" text="Bestelnr" />
                  <TableColumn fx:id="colKlantNr" prefWidth="75.0" styleClass="center_column" text="Klantnr" />
                <TableColumn fx:id="colDatum" prefWidth="75.0" styleClass="center_column" text="Datum" />
                  <TableColumn fx:id="colStatus" prefWidth="75.0" styleClass="center_column" text="Status" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onUpdateBestelling" styleClass="btn" stylesheets="@../../styles.css" text="Update" />
                  <Button mnemonicParsing="false" onAction="#onDeleteBestelling" styleClass="btn" stylesheets="@../../styles.css" text="Verwijder">
                     <HBox.margin>
                         <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onAddBestelling" styleClass="btn" stylesheets="@../../styles.css" text="Toevoegen">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onRefreshBestellingen" styleClass="btn" stylesheets="@../../styles.css" text="Refresh" textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
